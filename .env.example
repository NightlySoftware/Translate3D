# Hydrogen / MiniOxygen
SESSION_SECRET="dev-secret"

# Storefront API (Hydrogen will typically populate these via `shopify hydrogen link` + `shopify hydrogen env pull`)
PUBLIC_STORE_DOMAIN="your-store.myshopify.com"
PUBLIC_CHECKOUT_DOMAIN="your-store.myshopify.com"
PUBLIC_STOREFRONT_API_TOKEN="your-storefront-token"
PRIVATE_STOREFRONT_API_TOKEN="your-private-storefront-token" # if you don't have one yet, you can temporarily reuse the public token
PUBLIC_STOREFRONT_ID="your-storefront-id" # used for analytics; find it in Shopify admin Hydrogen channel/app config

# Customer Account API (New Customer Accounts)
# SHOP_ID is the numeric shop ID used to build OAuth/GraphQL URLs under shopify.com/*
SHOP_ID="00000000000"
PUBLIC_CUSTOMER_ACCOUNT_API_CLIENT_ID="00000000-0000-0000-0000-000000000000"
PUBLIC_CUSTOMER_ACCOUNT_API_URL="https://shopify.com/00000000000" # not currently used by Hydrogen runtime, but required by types

# Seed script (Admin REST API)
SHOPIFY_STORE_DOMAIN="your-store.myshopify.com"
SHOPIFY_ADMIN_API_ACCESS_TOKEN="shpat_..."
SHOPIFY_ADMIN_API_VERSION="2025-01"

# Optional: verification script
SHOPIFY_STOREFRONT_API_VERSION="2025-01"
